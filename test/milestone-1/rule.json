{
  "dfa_config": {
    "start_state": "q0",
    "final_states": [
      "q_identifier",
      "q_number",
      "q_number_dot",
      "q_float",
      "q_scientific",
      "q_char_lit",
      "q_string_lit",
      "q_comment",
      "q_plus",
      "q_minus",
      "q_mul",
      "q_div",
      "q_eq",
      "q_lt",
      "q_gt",
      "q_ne",
      "q_let",
      "q_get",
      "q_colon",
      "q_assign",
      "q_dot",
      "q_range",
      "q_semicolon",
      "q_comma",
      "q_lparen",
      "q_rparen",
      "q_lbracket",
      "q_rbracket",
      "q_unary_plus",
      "q_unary_minus",
      "q_signed_number",
      "q_signed_number_dot",
      "q_signed_float",
      "q_signed_scientific"
    ]
  },

  "keyword_lookup": {
    "keywords": [
      "program", "var", "begin", "end", "if", "then", "else",
      "while", "do", "for", "to", "downto", "integer", "real",
      "boolean", "char", "array", "of", "procedure", "function",
      "const", "type"
    ],
    "logical_operators": ["and", "or", "not"],
    "arithmetic_word_operators": ["div", "mod"]
  },

  "transitions": [
    {
      "comment": "IDENTIFIER/KEYWORD - Pattern: letter (letter|digit|_)*",
      "rules": [
        {"from": "q0", "input": "letter", "to": "q_identifier"},
        {"from": "q_identifier", "input": "letter", "to": "q_identifier"},
        {"from": "q_identifier", "input": "digit", "to": "q_identifier"},
        {"from": "q_identifier", "input": "_", "to": "q_identifier"}
      ]
    },
    {
      "comment": "NUMBER - Handles 5, 5., 5.7, +5, -5, +5.7, -5.7 patterns",
      "rules": [
        {"from": "q0", "input": "digit", "to": "q_number"},
        {"from": "q_number", "input": "digit", "to": "q_number"},
        {"from": "q_number", "input": ".", "to": "q_number_dot"},
        {"from": "q_number_dot", "input": "digit", "to": "q_float"},
        {"from": "q_float", "input": "digit", "to": "q_float"},
        {"from": "q_number_dot", "input": ".", "to": "q_range"},
        {"from": "q_number", "input": "e", "to": "q_exp"},
        {"from": "q_number", "input": "E", "to": "q_exp"},
        {"from": "q_float", "input": "E", "to": "q_exp"},
        {"from": "q_float", "input": "e", "to": "q_exp"},
        {"from": "q_exp", "input": "-", "to": "q_exp_sign"},
        {"from": "q_exp", "input": "+", "to": "q_exp_sign"},
        {"from": "q_exp", "input": "digit", "to": "q_scientific"},
        {"from": "q_exp_sign", "input": "digit", "to": "q_scientific"},
        {"from": "q_scientific", "input": "digit", "to": "q_scientific"},
        
        {"from": "q0", "input": "+", "to": "q_unary_plus"},
        {"from": "q0", "input": "-", "to": "q_unary_minus"},
        {"from": "q_unary_plus", "input": "digit", "to": "q_signed_number"},
        {"from": "q_unary_minus", "input": "digit", "to": "q_signed_number"},
        {"from": "q_signed_number", "input": "digit", "to": "q_signed_number"},
        {"from": "q_signed_number", "input": ".", "to": "q_signed_number_dot"},
        {"from": "q_signed_number_dot", "input": "digit", "to": "q_signed_float"},
        {"from": "q_signed_float", "input": "digit", "to": "q_signed_float"},
        

        {"from": "q_signed_number", "input": "e", "to": "q_signed_exp"},
        {"from": "q_signed_number", "input": "E", "to": "q_signed_exp"},
        {"from": "q_signed_float", "input": "E", "to": "q_signed_exp"},
        {"from": "q_signed_float", "input": "e", "to": "q_signed_exp"},
        {"from": "q_signed_exp", "input": "+", "to": "q_signed_exp_sign"},
        {"from": "q_signed_exp", "input": "-", "to": "q_signed_exp_sign"},
        {"from": "q_signed_exp", "input": "digit", "to": "q_signed_scientific"},
        {"from": "q_signed_exp_sign", "input": "digit", "to": "q_signed_scientific"},
        {"from": "q_signed_scientific", "input": "digit", "to": "q_signed_scientific"}
        
      ]
    },
    {
      "comment": "CHARACTER LITERAL - Pattern: 'c' (single char inside quotes)",
      "rules": [
        {"from": "q0", "input": "'", "to": "q_char_start"},
        {"from": "q_char_start", "input": "any", "to": "q_char_content"},
        {"from": "q_char_content", "input": "'", "to": "q_char_lit"}
      ]
    },
    {
      "comment": "STRING LITERAL - Pattern: 'chars+' (handles doubled '' escape)",
      "rules": [
        {"from": "q_char_content", "input": "any", "to": "q_string_content"},
        {"from": "q_string_content", "input": "any", "to": "q_string_content"},
        {"from": "q_string_content", "input": "'", "to": "q_string_lit"}

      ]
    },
    {
      "comment": "COMMENT - Pattern: {...} or (*...*)",
      "rules": [
        {"from": "q0", "input": "{", "to": "q_comment_brace"},
        {"from": "q_comment_brace", "input": "any", "to": "q_comment_brace"},
        {"from": "q_comment_brace", "input": "}", "to": "q_comment"},
        {"from": "q0", "input": "(", "to": "q_lparen_or_comment"},
        {"from": "q_lparen_or_comment", "input": "*", "to": "q_comment_paren"},
        {"from": "q_lparen_or_comment", "input": "other", "to": "q_lparen"},
        {"from": "q_comment_paren", "input": "any", "to": "q_comment_paren"},
        {"from": "q_comment_paren", "input": "*", "to": "q_comment_star"},
        {"from": "q_comment_star", "input": ")", "to": "q_comment"},
        {"from": "q_comment_star", "input": "any", "to": "q_comment_paren"}
      ]
    },
    {
      "comment": "ARITHMETIC OPERATOR - + - * / div mod (binary operators)",
      "rules": [
        {"from": "q_identifier", "input": "+", "to": "q_plus"},
        {"from": "q_identifier", "input": "-", "to": "q_minus"},
        {"from": "q_number", "input": "+", "to": "q_plus"},
        {"from": "q_number", "input": "-", "to": "q_minus"},
        {"from": "q_number_dot", "input": "+", "to": "q_plus"},
        {"from": "q_number_dot", "input": "-", "to": "q_minus"},
        {"from": "q_float", "input": "+", "to": "q_plus"},
        {"from": "q_float", "input": "-", "to": "q_minus"},
        {"from": "q_scientific", "input": "+", "to": "q_plus"},
        {"from": "q_scientific", "input": "-", "to": "q_minus"},
        {"from": "q_char_lit", "input": "+", "to": "q_plus"},
        {"from": "q_char_lit", "input": "-", "to": "q_minus"},
        {"from": "q_string_lit", "input": "+", "to": "q_plus"},
        {"from": "q_string_lit", "input": "-", "to": "q_minus"},
        {"from": "q_rparen", "input": "+", "to": "q_plus"},
        {"from": "q_rparen", "input": "-", "to": "q_minus"},
        {"from": "q_rbracket", "input": "+", "to": "q_plus"},
        {"from": "q_rbracket", "input": "-", "to": "q_minus"},
        
        {"from": "q0", "input": "*", "to": "q_mul"},
        {"from": "q0", "input": "/", "to": "q_div"}
      ]
    },
    {
      "comment": "RELATIONAL OPERATORS - = < > <= >= <>",
      "rules": [
        {"from": "q0", "input": "=", "to": "q_eq"},
        {"from": "q0", "input": "<", "to": "q_lt"},
        {"from": "q_lt", "input": "=", "to": "q_let"},
        {"from": "q_lt", "input": ">", "to": "q_ne"},
        {"from": "q0", "input": ">", "to": "q_gt"},
        {"from": "q_gt", "input": "=", "to": "q_get"}
      ]
    },
    {
      "comment": "DELIMITERS AND RANGE - : := . .. ; , ( ) [ ]",
      "rules": [
        {"from": "q0", "input": ":", "to": "q_colon"},
        {"from": "q_colon", "input": "=", "to": "q_assign"},
        {"from": "q0", "input": ".", "to": "q_dot"},
        {"from": "q_dot", "input": ".", "to": "q_range"},
        {"from": "q0", "input": ";", "to": "q_semicolon"},
        {"from": "q0", "input": ",", "to": "q_comma"},
        {"from": "q0", "input": ")", "to": "q_rparen"},
        {"from": "q0", "input": "[", "to": "q_lbracket"},
        {"from": "q0", "input": "]", "to": "q_rbracket"}
      ]
    },
    {
      "comment": "WHITESPACE - ignored",
      "rules": [
        {"from": "q0", "input": "space", "to": "q0"},
        {"from": "q0", "input": "tab", "to": "q0"},
        {"from": "q0", "input": "newline", "to": "q0"}
      ]
    }
  ],

